  <Config Name="REPO" Target="REPO" Default="https://github.com/rix1337/RSScrawler.git" Mode="" Description="choose which repo should be used for the RSScrawler script" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
</Container>
