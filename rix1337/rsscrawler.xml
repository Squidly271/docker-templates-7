  <Description>&#xD;
	This python-based script crawls pre-defined RSS feeds and outputs JD2-crawljobs[br]&#xD;
	Only useful for German users. Very advanced and user friendly features.&#xD;
  </Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>9090</HostPort>
        <ContainerPort>9090</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/RSScrawler</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/jdownloader/folderwatch/</HostDir>
      <ContainerDir>/jd2/folderwatch</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
    <Variable>
      <Value/>
      <Name>LOGLEVEL</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>NO_UPDATES</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>PARAMETER</Name>
      <Mode/>
    </Variable>
    <Variable>
      <Value/>
      <Name>BRANCH</Name>
      <Mode/>
    </Variable>  
    <Variable>
      <Value/>
      <Name>REPO</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Config Name="AppData Config Path" Target="/config" Default="/mnt/cache/appdata/RSScrawler" Mode="rw" Description="Container Path: /config" Type="Path" Display="hidden" Required="true" Mask="false">/mnt/cache/appdata/RSScrawler</Config>
  <Config Name="JDownloader 2 " Target="/jd2/folderwatch" Default="/mnt/cache/appdata/jdownloader/jd2/folderwatch" Mode="rw" Description="Container Path: /jd2/folderwatch" Type="Path" Display="always" Required="true" Mask="false">/mnt/cache/appdata/JDownloader2/folderwatch/</Config>
  <Config Name="Webserver" Target="9090" Default="" Mode="tcp" Description="Container Port: 9090" Type="Port" Display="always" Required="false" Mask="false">9090</Config>
  <Config Name="LOGLEVEL" Target="LOGLEVEL" Default="INFO" Mode="" Description="options are:&#13;&#10;CRITICAL, ERROR, WARNING, INFO, DEBUG, NOTSET" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="NO_UPDATES" Target="NO_UPDATES" Default="false" Mode="" Description="set to " Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
  <Config Name="PARAMETER" Target="PARAMETER" Default="" Mode="" Description="options are:&#13;&#10;--testlauf&#13;&#10;--ersatzblogs&#13;&#10;&#13;&#10;if you want to use both, write it like this:&#13;&#10;--testlauf --ersatzblogs" Type="Variable" Display="advanced-hide" Required="false" Mask="false"/>
