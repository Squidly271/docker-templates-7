<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <Name>Processing</Name>
  <Description>
  Post Process Downloaded Media Files
  </Description>
  <Overview>
	Includes a Bash Script that automatically renames Media and adds Tags with the help of filebot/mkvtoolnix
  </Overview>
  <Support>http://lime-technology.com/forum/index.php</Support>
  <Registry>https://registry.hub.docker.com/u/rix1337/docker-processing</Registry>
  <GitHub>https://github.com/rix1337/docker-processing</GitHub>
  <Repository>rix1337/docker-processing</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
    <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>500</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol></Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>EDGE</Name>
      <Value>0</Value>
    </Variable>
    <Variable>
      <Name>WIDTH</Name>
      <Value>1280</Value>
    </Variable>
    <Variable>
      <Name>HEIGHT</Name>
      <Value>720</Value>
    </Variable>
  </Environment>    
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/processing</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/Downloads</HostDir>
      <ContainerDir>/downloads</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/Verarbeitung</HostDir>
      <ContainerDir>/verarbeitung</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:500]/</WebUI>
  <Banner></Banner>
  <Icon>https://rix.ninja/css/images/rix.ico</Icon>
  <Beta>False</Beta>
  <Category>MediaApp:Videos</Category>
  <Date>2015-10-25</Date>
  <Changes>
	-Initial Release
  </Changes>
</Containers>
